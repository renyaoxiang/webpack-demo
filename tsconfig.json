{
	"version": "2.7.0",
	"compilerOptions": {
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		},
		"lib": ["dom", "es2017"],
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"sourceMap": true,
		"jsx": "react"
	},
	"include": ["./typings/**/*", "./src/**/*"]
}
